{
    "source"    : {
        "includePattern": ".+\\.(js|md)$"
    },
	"tags"      : {
		"allowUnknownTags" : true
	},
	"plugins"   : ["plugins/markdown"],
	"templates" : {
		"cleverLinks"     : true,
		"monospaceLinks"  : false,
		"default"         : {
			"outputSourceFiles" : true
		},
		"systemName"      : "Promise Circuit Breaker",
		"footer"          : "",
		"copyright"       : "",
		"navType"         : "vertical",
		"theme"           : "spacelab",
		"linenums"        : true,
		"collapseSymbols" : false,
		"inverseNav"      : true
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	}
}
